<Application x:Class="EtabInspector.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             xmlns:local="clr-namespace:EtabInspector.UI"
             xmlns:helpers="clr-namespace:EtabInspector.UI.Helpers"
             Startup="OnStartup"
             Exit="OnExit">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Inkore.UI.WPF.Modern Theme Resources -->
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>

            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        </ResourceDictionary>

    </Application.Resources>
</Application>
