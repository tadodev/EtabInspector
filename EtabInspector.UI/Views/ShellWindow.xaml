<Window x:Class="EtabInspector.UI.ViewModels.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xcad="clr-namespace:AvalonDock;assembly=AvalonDock"
        xmlns:xcadl="clr-namespace:AvalonDock.Layout;assembly=AvalonDock"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:helpers="clr-namespace:EtabInspector.UI.Helpers"
        xmlns:documents="clr-namespace:EtabInspector.UI.Views.Documents"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ETABS Inspector"
        Height="800" Width="1200">

    <Window.Resources>
        <!-- Document Templates -->
        <DataTemplate x:Key="ModelDocumentTemplate">
            <documents:ModelDocumentView />
        </DataTemplate>

        <DataTemplate x:Key="DrawingDocumentTemplate">
            <documents:DrawingDocumentView />
        </DataTemplate>

        <!-- Document Template Selector -->
        <helpers:DocumentTemplateSelector x:Key="DocumentTemplateSelector"
                                          ModelDocumentTemplate="{StaticResource ModelDocumentTemplate}"
                                          DrawingDocumentTemplate="{StaticResource DrawingDocumentTemplate}"/>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#F0F0F0" Padding="5">
            <MenuItem Header="_File">
                <MenuItem Header="New _Model" Command="{Binding NewModelCommand}" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“Š" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="New _Drawing" Command="{Binding NewDrawingCommand}" InputGestureText="Ctrl+D">
                    <MenuItem.Icon>
                        <TextBlock Text="ðŸ“" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Close Document" Command="{Binding CloseDocumentCommand}" InputGestureText="Ctrl+W"/>
                <MenuItem Header="Close _All Documents" Command="{Binding CloseAllDocumentsCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="_Redo" InputGestureText="Ctrl+Y"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Zoom In" InputGestureText="Ctrl++"/>
                <MenuItem Header="Zoom _Out" InputGestureText="Ctrl+-"/>
                <MenuItem Header="_Fit to Window" InputGestureText="Ctrl+0"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Options"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Documentation"/>
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBarTray DockPanel.Dock="Top" Background="#FAFAFA">
            <ToolBar Band="1" BandIndex="1">
                <Button Command="{Binding NewModelCommand}" ToolTip="New Model">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Model"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding NewDrawingCommand}" ToolTip="New Drawing">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Drawing"/>
                    </StackPanel>
                </Button>
                <Separator/>
                <Button Command="{Binding CloseDocumentCommand}" ToolTip="Close Document">
                    <TextBlock Text="âœ–ï¸" FontSize="16"/>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#0078D4" Foreground="White" Padding="5">
            <StatusBarItem>
                <TextBlock Text="Ready" FontWeight="SemiBold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Active: "/>
                    <TextBlock Text="{Binding ActiveDocument.Title, FallbackValue='None'}" FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Documents: "/>
                    <TextBlock Text="{Binding Documents.Count}" FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content - AvalonDock -->
        <Grid>
            <xcad:DockingManager x:Name="dockManager"
                                 DocumentsSource="{Binding Documents}"
                                 ActiveContent="{Binding ActiveDocument, Mode=TwoWay}"
                                 LayoutItemTemplateSelector="{StaticResource DocumentTemplateSelector}">

                <!-- Document Header Template -->
                <xcad:DockingManager.DocumentHeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" Margin="4,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </xcad:DockingManager.DocumentHeaderTemplate>

                <!-- Layout Root -->
                <xcadl:LayoutRoot>
                    <xcadl:LayoutPanel Orientation="Horizontal">
                        <!-- Main Document Area -->
                        <xcadl:LayoutDocumentPaneGroup>
                            <xcadl:LayoutDocumentPane/>
                        </xcadl:LayoutDocumentPaneGroup>
                    </xcadl:LayoutPanel>
                </xcadl:LayoutRoot>
            </xcad:DockingManager>

            <!-- Welcome Screen when no documents are open -->
            <Border Background="White" Visibility="{Binding Documents.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ—ï¸" FontSize="100" HorizontalAlignment="Center" Foreground="#0078D4"/>
                    <TextBlock Text="ETABS Style Application" FontSize="28" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,20,0,10" Foreground="#333333"/>
                    <TextBlock Text="Get started by creating a new document" FontSize="16" 
                               HorizontalAlignment="Center" Foreground="#666666" Margin="0,0,0,30"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding NewModelCommand}" Padding="20,10" Margin="5" 
                                Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="New Model" FontSize="14" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NewDrawingCommand}" Padding="20,10" Margin="5"
                                Background="#0078D4" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <StackPanel>
                                <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="New Drawing" FontSize="14" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
