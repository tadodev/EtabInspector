<UserControl x:Class="EtabInspector.UI.Views.ToolWindows.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EtabInspector.UI.Views.ToolWindows"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- Appearance Section -->
            <TextBlock Text="Appearance" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,16"/>

            <!-- Theme Selection -->
            <TextBlock Text="Theme" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,8"/>

            <TextBlock Text="Choose your preferred theme" 
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       Margin="0,0,0,12"
                       TextWrapping="Wrap"/>

            <!-- Light Theme Card -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,0,12"
                    Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding ApplyLightThemeCommand}"/>
                </Border.InputBindings>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLightTheme}" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundAccentBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Light Theme Icon -->
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            Background="#FFFFFF"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,16,0">
                        <ui:FontIcon Glyph="&#xE706;" 
                                     FontSize="24"
                                     Foreground="#333333"/>
                    </Border>

                    <!-- Description -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Light" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Light theme with bright backgrounds" 
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Selected Indicator -->
                    <ui:FontIcon Grid.Column="2"
                                 Glyph="&#xE73E;"
                                 FontSize="20"
                                 Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding IsLightTheme, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Dark Theme Card -->
            <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                    BorderBrush="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,0,12"
                    Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding ApplyDarkThemeCommand}"/>
                </Border.InputBindings>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundAccentBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </DataTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Dark Theme Icon -->
                    <Border Grid.Column="0"
                            Width="48" Height="48"
                            Background="#1E1E1E"
                            BorderBrush="#333333"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,16,0">
                        <ui:FontIcon Glyph="&#xE708;" 
                                     FontSize="24"
                                     Foreground="#FFFFFF"/>
                    </Border>

                    <!-- Description -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Dark" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Dark theme with dark backgrounds" 
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Selected Indicator -->
                    <ui:FontIcon Grid.Column="2"
                                 Glyph="&#xE73E;"
                                 FontSize="20"
                                 Foreground="{DynamicResource SystemControlForegroundAccentBrush}"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding IsDarkTheme, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Divider -->
            <Border Height="1" 
                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    Margin="0,16,0,16"/>

            <!-- About Section -->
            <TextBlock Text="About" 
                       FontSize="20" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,16"/>

            <StackPanel>
                <TextBlock Text="ETABS Inspector" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
                <TextBlock Text="Version 1.0.0" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,4,0,0"/>
                <TextBlock Text="A modern structural analysis tool" 
                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Divider -->
            <Border Height="1" 
                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                    Margin="0,16,0,16"/>

            <!-- Info -->
            <TextBlock Text="💡 Tip: Theme changes apply immediately to all windows" 
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                       FontStyle="Italic"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
