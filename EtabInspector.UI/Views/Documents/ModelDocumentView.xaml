<UserControl x:Class="EtabInspector.UI.Views.Documents.ModelDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EtabInspector.UI.Views.Documents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Zoom In" Margin="0,0,5,0" Padding="10,5"/>
                <Button Content="Zoom Out" Margin="0,0,5,0" Padding="10,5"/>
                <Button Content="Fit View" Margin="0,0,5,0" Padding="10,5"/>
                <Separator Margin="5,0"/>
                <Button Content="Add Node" Margin="5,0,5,0" Padding="10,5"/>
                <Button Content="Add Element" Margin="0,0,5,0" Padding="10,5"/>
            </StackPanel>
        </Border>

        <!-- 3D View Area -->
        <Border Grid.Row="1" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
            <Grid>
                <!-- Placeholder for 3D viewport -->
                <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ï¸" FontSize="120" HorizontalAlignment="Center" Foreground="#0078D4"/>
                        <TextBlock Text="{Binding ModelData}" FontSize="16" 
                                   HorizontalAlignment="Center" Margin="0,20,0,0" 
                                   Foreground="#333333" TextWrapping="Wrap" MaxWidth="400"
                                   TextAlignment="Center"/>
                        <TextBlock Text="3D Model Viewport" FontSize="14" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0" 
                                   Foreground="#666666"/>
                    </StackPanel>
                </Viewbox>

                <!-- Coordinate System Indicator -->
                <Border Background="White" CornerRadius="4" Padding="10" 
                        HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                        Margin="10" BorderBrush="#CCCCCC" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="X âž" Foreground="Red" FontWeight="Bold"/>
                        <TextBlock Text="Y âž" Foreground="Green" FontWeight="Bold"/>
                        <TextBlock Text="Z â¬†" Foreground="Blue" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Title}" FontWeight="SemiBold"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Nodes: " Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding NodeCount}" FontWeight="Bold" Margin="0,0,15,0"/>
                    <TextBlock Text="Elements: " Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ElementCount}" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
