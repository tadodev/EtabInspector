<UserControl x:Class="EtabInspector.UI.Views.Documents.DrawingDocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EtabInspector.UI.Views.Documents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Line" Margin="0,0,5,0" Padding="10,5"/>
                <Button Content="Rectangle" Margin="0,0,5,0" Padding="10,5"/>
                <Button Content="Circle" Margin="0,0,5,0" Padding="10,5"/>
                <Separator Margin="5,0"/>
                <Button Content="Dimension" Margin="5,0,5,0" Padding="10,5"/>
                <Button Content="Text" Margin="0,0,5,0" Padding="10,5"/>
            </StackPanel>
        </Border>

        <!-- 2D Drawing Area -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Margin="5">
            <Grid>
                <!-- Grid lines -->
                <Canvas>
                    <!-- Vertical lines -->
                    <Line X1="50" Y1="0" X2="50" Y2="1000" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="100" Y1="0" X2="100" Y2="1000" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="150" Y1="0" X2="150" Y2="1000" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="200" Y1="0" X2="200" Y2="1000" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="250" Y1="0" X2="250" Y2="1000" Stroke="#E0E0E0" StrokeThickness="0.5"/>

                    <!-- Horizontal lines -->
                    <Line X1="0" Y1="50" X2="1000" Y2="50" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="0" Y1="100" X2="1000" Y2="100" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="0" Y1="150" X2="1000" Y2="150" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="0" Y1="200" X2="1000" Y2="200" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                    <Line X1="0" Y1="250" X2="1000" Y2="250" Stroke="#E0E0E0" StrokeThickness="0.5"/>
                </Canvas>

                <!-- Placeholder content -->
                <Viewbox Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="ðŸ“" FontSize="120" HorizontalAlignment="Center" Foreground="#0078D4"/>
                        <TextBlock Text="{Binding DrawingContent}" FontSize="16" 
                                   HorizontalAlignment="Center" Margin="0,20,0,0" 
                                   Foreground="#333333" TextWrapping="Wrap" MaxWidth="400"
                                   TextAlignment="Center"/>
                        <TextBlock Text="2D Drawing Viewport" FontSize="14" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0" 
                                   Foreground="#666666"/>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Title}" FontWeight="SemiBold"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Scale: " Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Scale, StringFormat='{}{0:F2}'}" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
